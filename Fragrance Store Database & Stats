--display the database ordered by rating. 
SELECT * FROM fragrances 
ORDER BY rating desc; 

--What is the avg price of items in the vanilla section?
SELECT AVG(rating) "avg item rating" 
FROM store 
WHERE section = 'vanilla'; 


